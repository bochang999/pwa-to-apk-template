{
  "name": "petit-recipe",
  "version": "1.0.0",
  "description": "シンプルで使いやすいデジタルレシピ帳アプリ",
  "main": "index.html",
  "scripts": {
    "dev": "http-server -p 8080 -c-1",
    "start": "http-server -p 8080 -c-1",
    "build": "echo 'Build completed'",
    "test": "echo 'No tests specified'",
    "capacitor:init": "npx cap init",
    "capacitor:add:android": "npx cap add android",
    "capacitor:sync": "npx cap sync",
    "capacitor:open:android": "npx cap open android",
    "capacitor:run:android": "npx cap run android",
    "android:build": "npm run capacitor:sync && cd android && ./gradlew assembleRelease",
    "android:sign": "cd android/app/build/outputs/apk/release && jarsigner -verbose -keystore ../../../../../template.keystore -signedjar app-release-signed.apk app-release-unsigned.apk template-key",
    "serve": "http-server -p 8080 -c-1 -o",
    "format": "prettier --write \"**/*.{ts,js}\"",
    "lint": "eslint \"**/*.{ts,js}\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bochang999/petit-recipe.git"
  },
  "keywords": [
    "pwa",
    "apk",
    "capacitor",
    "template",
    "progressive-web-app",
    "android",
    "mobile",
    "javascript",
    "html5",
    "css3",
    "service-worker",
    "offline",
    "responsive"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/pwa-to-apk-template/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/pwa-to-apk-template#readme",
  "dependencies": {
    "@capacitor/core": "^7.0.0",
    "@capacitor/filesystem": "^7.0.0",
    "@capacitor/preferences": "^7.0.0"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/status-bar": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "http-server": "^14.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not ie 11"
  ],
  "pwa": {
    "name": "PWA Template",
    "short_name": "PWATemplate",
    "theme_color": "#2C3E50",
    "background_color": "#FFFFFF",
    "start_url": "./",
    "display": "standalone",
    "orientation": "portrait"
  },
  "capacitor": {
    "appId": "com.example.pwatemplate",
    "appName": "PWA Template",
    "webDir": "./",
    "bundledWebRuntime": false
  }
}